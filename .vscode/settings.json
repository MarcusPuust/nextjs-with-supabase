{
  "deno.enablePaths": [
    "supabase/functions"
  ],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Tailwind CSS: stop VSCode built-in CSS linter from marking @tailwind / @layer / @apply as unknown
  "css.validate": false,
  // Use Tailwind CSS language mode for all CSS files to get correct IntelliSense
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // Extra Tailwind editor niceties
  "tailwindCSS.emmetCompletions": true
}
